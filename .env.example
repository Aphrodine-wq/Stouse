# VibeHouse Platform Configuration
# Copy this to .env and fill in your real API keys

# Database
DATABASE_URL=postgresql+asyncpg://vibehouse:vibehouse_dev@db:5432/vibehouse

# Redis
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=change-me-in-production-use-a-long-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALLOWED_ORIGINS=*

# AI Provider (OpenAI-compatible)
# Set a real key to enable LLM-powered features
AI_API_KEY=mock_ai_key
AI_BASE_URL=https://api.openai.com/v1
AI_MODEL=gpt-4o

# Trello
# Get keys at https://trello.com/power-ups/admin
TRELLO_API_KEY=mock_trello_key
TRELLO_API_SECRET=mock_trello_secret

# SendGrid
# Get key at https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=mock_sendgrid_key
FROM_EMAIL=no-reply@vibehouse.app

# Twilio
# Get credentials at https://console.twilio.com
TWILIO_ACCOUNT_SID=mock_twilio_sid
TWILIO_AUTH_TOKEN=mock_twilio_token
TWILIO_FROM_NUMBER=+15555555555

# Google Maps
# Get key at https://console.cloud.google.com
MAPS_API_KEY=mock_maps_key

# Stripe
# Get keys at https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=mock_stripe_key
STRIPE_PUBLISHABLE_KEY=mock_stripe_pub_key
STRIPE_WEBHOOK_SECRET=

# Storage
# Set to "s3" and fill AWS creds for cloud storage
STORAGE_BACKEND=local
STORAGE_LOCAL_PATH=/app/storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=vibehouse-uploads

# App
APP_ENV=development
APP_URL=http://localhost:8000
LOG_LEVEL=INFO
